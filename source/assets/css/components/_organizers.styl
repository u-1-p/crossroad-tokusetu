.organizers
  padding-top 4% 
  text-align center
  margin 0 auto
  display table
  h1
    display inline-block
.member
  @media screen and (max-width: 726px)
    width 100%
  @media screen and (min-width: 727px)
    width 43%
    display table-cell
.icon
  text-align center
  padding-top 2.3em
  img
    @media screen and (max-width: 726px)
      width 75%
    @media screen and (min-width: 727px)
      width 35%
.prof_name
  font-size 1.4em
  letter-spacing 1.8px
  margin-top 0.8em
.twi_id
  a
    font-size 1.2em 
    text-decoration none
    color $text-color
    letter-spacing 2px
  a:hover
    color $link-select
.website
  padding 0.2em 0 0.2em 0
  a
    font-size 1em 
    text-decoration none
    color $sky_blue
    letter-spacing 0.8px
  a:hover
    color $link-select    
.sumally
  text-align left
  display inline-block
  font-size 0.8em
  letter-spacing 1px  
  line-height 2 
  padding-bottom 2%
  @media screen and (max-width: 726px)
    width 90%
  @media screen and (min-width: 727px)
    width 45%
    max-width 700px
.unun_member
  margin 0 auto
  @media screen and (max-width: 726px)
    width 90%
  @media screen and (min-width: 727px)
    width 45%
    max-width 700px
  color $gray
  border 1px solid $sky_blue 
  h2
    padding-top 0.6em  
    font-size 1.3em
    padding-bottom 0.6em 
  h2:hover
    color $link-select  
  .icon_s
    padding-bottom 0.3em
    img
      @media screen and (max-width: 726px)
        width 40%
      @media screen and (min-width: 727px)
        width 35%
  .prof_name_s
    font-size 1.2em
    padding-bottom 0.1em  
  .twi_id_s
    padding-bottom 1em 
    font-size 0.8em
    a
      color $gray
      text-decoration none
    a:hover
      color $link-select
    
  .icon_s,.prof_name_s,.twi_id_s
    display none